<p style="color: green"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Second Name</th>
      <th>Age</th>
      <th>Ball control</th>
      <th>Short passing</th>
      <th>Dribbling</th>
      <th>Running with the ball</th>
      <th>Crossing</th>
      <th>Shooting</th>
      <th>Progress</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div id="sportplayers">
      <% @sportplayers.each do |player| %>
        <tr>
          <td><%= player.first_name %></td>
          <td><%= player.last_name %></td>
          <td><%= player.age %></td>
          <td><%= player.ball_control %></td>
          <td><%= player.short_passing %></td>
          <td><%= player.dribbling %></td>
          <td><%= player.running_with_the_ball %></td>
          <td><%= player.crossing %></td>
          <td><%= player.shooting %></td>
          <td><%= player.progress %></td>
          <td><%= link_to "Show", @sportplayer %></td>
          <td><%= link_to 'Edit', edit_sportplayer_path(player) %></td>
          <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </div>
  </tbody>
</table>

<%= link_to "New player", new_sportplayer_path %>
